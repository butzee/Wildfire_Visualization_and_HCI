{
    "appId": "com.vhci.wildfires",

    "productName": "Wildfires USA",
    "copyright": "Niemann, Cares",
    "directories": {
        "app": ".",
        "output": "dist",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "*/*",
        "node_modules"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.auxWall.services"
      },
    "win": {
        "target": "nsis",
        "icon": "build-res/icon.ico"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    }
}